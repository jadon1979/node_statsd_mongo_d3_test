<%= form_for(@user) do |f| %>

  <div class="well">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control', placeholder: 'Enter a User Name' %>
    </div>

    <div class="form-group">
      <%= f.label :api_key, 'API Key' %>
      <%= f.text_field :api_key, :class => 'form-control', placeholder: 'Enter an API Key' %>
    </div>

  </div>

  <div class="btn-group btn-group-sm">
    <%= link_to 'Back', users_url, class: 'btn btn-default' %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>

<% end %>
