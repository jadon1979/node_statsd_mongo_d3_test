<h3>Listing Users</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Api Key</th>
      <th>Pages</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
          </td>
        </tr>
      </tfoot>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.api_key %></td>
        <td><%= user.pages.size %></td>
        <td>
          <div class="btn-group btn-group-sm pull-right">
            <%= link_to 'Show', user, class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %>
            <%= link_to 'Destroy', user, 
              method: :delete, data: { confirm: 'Are you sure?' },
              class: 'btn btn-danger'
            %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

